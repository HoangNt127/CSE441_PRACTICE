<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center_horizontal" />

    <!-- Họ tên -->
    <EditText
        android:id="@+id/edtten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên"
        android:text=""
        android:layout_marginTop="10dp" />

    <!-- CMND -->
    <EditText
        android:id="@+id/edtcmnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CMND"
        android:text=""
        android:inputType="number"
        android:layout_marginTop="10dp" />

    <!-- Bằng cấp (RadioGroup) -->

    <TextView
        android:id="@+id/tvBangCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#2196F3"
        android:padding="10dp"
        android:text="Bằng cấp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/idgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/rbtnTrungCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung cấp" />

        <RadioButton
            android:id="@+id/rbtnCaoDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao đẳng" />

        <RadioButton
            android:id="@+id/rbtnDaiHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học"
            android:checked="true" />
    </RadioGroup>

    <!-- Sở thích (CheckBox) -->
    <TextView
        android:id="@+id/tvSoThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:id="@+id/chkDocBao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc báo"
        android:checked="false" />

    <CheckBox
        android:id="@+id/chkDocSach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc sách" />

    <CheckBox
        android:id="@+id/chkDocCoding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc coding"
        android:checked="false" />

    <!-- Thông tin bổ sung -->
    <TextView
        android:id="@+id/tvThongTinBoSung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/edtbosung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thông tin bổ sung"
        android:text=""
        android:layout_marginTop="5dp" />

    <!-- Nút gửi thông tin -->
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />
</LinearLayout>
